<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%=  %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user),class:"btn btn-outline-secondary btn-block mt-4" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div>
          <label class="d-block">Title</label>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="mt-3">
          <label class="d-block">Opinion</label>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="mt-3">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th style="width: 100px;"></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book_image| %>
          <tr>
            <td>
              <%= link_to user_path(book_image.user) do %>
                <%= image_tag book_image.get_image, size:"80x80" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book_image.user) do %>
                <%= book_image.title %>
              <% end %>
            </td>
            <td><%= book_image.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>