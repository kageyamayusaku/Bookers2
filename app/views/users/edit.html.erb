<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mb-3">
      <h2 class="mt-3">User info</h2>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <div class="form_group">
          <label>Name</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form_group mt-3">
          <label>Image</label>
          <%= f.file_field :image, class:"form-control-file", accept: "image/*" %>
        </div>
        <div class="form_group mt-3">
          <label>Introduction</label>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="form_group mt-3">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>